{
    "data": {
        "base_dir": "../data",
        "resultant_col_name": [
            "hi_en",
            "en"
        ],
        "huggingface": {
            "name": "huggingface",
            "dataset": [
                "cmu_hinglish_dog",
                "findnitai/english-to-hinglish"
            ]
        },
        "hinglish_top_dataset": {
            "name": "hinglish_top_dataset",
            "dataset": {
                "train": [
                    "raw/train_top.tsv",
                    "raw/train_synt_top.tsv"
                ],
                "validation": [
                    "raw/validation_top.tsv"
                ],
                "test": [
                    "raw/test_top.tsv"
                ]
            }
        },
        "linc_dataset": {
            "name": "linc_dataset",
            "dataset": {
                "train": [
                    "raw/train_linc.txt"
                ],
                "validation": [
                    "raw/dev_linc.txt"
                ]
            }
        },
        "processed_data": {
            "base_dir": "../data/processed",
            "train_data": "train.csv",
            "validation_data": "validation.csv",
            "test_data": "test.csv"
        }
    },
    "mbart_code_mixed": {
        "tokenizer": {
            "byte_level_bpe_tokenizer": {
                "type": "ByteLevelBPETokenizer",
                "add_prefix_space": false,
                "lowercase": false,
                "trim_offsets": false,
                "vocab_file": null,
                "merges_file": null,
                "dropout": null,
                "unicode_normalizer": null,
                "continuing_subword_prefix": null,
                "end_of_word_suffix": null,
                "vocab_size": 50265,
                "min_fequency": 1,
                "show_progress": true,
                "special_tokens": [
                    "<s>",
                    "<pad>",
                    "</s>",
                    "<unk>"
                ],
                "mask_token": "<mask>",
                "length": null,
                "save_bpe": false,
                "prefix_path": "bpe_tokenizer",
                "save_path": "../runs/tokenizer",
                "load_path": null,
                "binding": {
                    "bart_tokenizer": {
                        "type": "BartTokenizer",
                        "from_pretrained": "facebook/bart-large",
                        "style": "default"
                    },
                    "bart_tokenizer_encoder": {
                        "type": "BartTokenizerEncoder",
                        "from_pretrained": "facebook/bart-large",
                        "style": "scratch"
                    },
                    "bart_tokenizer_decoder": {
                        "type": "BartTokenizerDecoder",
                        "from_pretrained": "facebook/bart-large",
                        "style": "default"
                    }
                }
            }
        },
        "dataloader": {
            "encoder": {
                "add_special_tokens": true,
                "max_length": null,
                "return_tensors": "pt",
                "padding": true,
                "verbose": true
            },
            "decoder": {
                "add_special_tokens": true,
                "max_length": null,
                "return_tensors": "pt",
                "padding": true,
                "verbose": true
            },
            "translations": {
                "hi_en__en": {
                    "src": "hi_en",
                    "tgt": "en"
                }
            },
            "train_batch_size": 32,
            "validation_batch_size": 32,
            "test_batch_size": 32
        },
        "model": {
            "bart_for_conditional_generation": {
                "type": "BartForConditionalGeneration",
                "device": "mps",
                "epochs": 50,
                "save_model": true,
                "save_to_gcp": true,
                "save_path": "../runs/models/bart_for_conditional_generation",
                "load_path": null,
                "use_pretrained": true,
                "from_pretrained": "facebook/bart-large",
                "vocab_size": 50265,
                "verbose": true,
                "verbose_step": 100,
                "freeze_model": true,
                "k_random": 7,
                "criterion": {
                    "type": "CrossEntropyLoss",
                    "weight": null,
                    "size_average": null,
                    "ignore_index": -100,
                    "reduce": null,
                    "reduction": "mean",
                    "label_smoothing": 0
                },
                "optimizer": {
                    "type": "AdamW",
                    "lr": 0.001,
                    "betas": [
                        0.9,
                        0.999
                    ],
                    "eps": 1e-06,
                    "weight_decay": 0,
                    "correct_bias": true,
                    "no_depreciation_warning": false
                },
                "scheduler": {
                    "type": "get_linear_schedule_with_warmup",
                    "num_warmup_steps": 10,
                    "num_training_steps": 50,
                    "last_epoch": -1
                },
                "generate": {
                    "min_length": 0,
                    "max_length": 20,
                    "early_stopping": false,
                    "num_beams": 4,
                    "temperature": 1.0,
                    "top_k": 50,
                    "top_p": 1.0
                }
            }
        }
    }
}